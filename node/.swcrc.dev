{
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": true,
  "exclude": [
    ".*.js$"
  ],
  "minify": false,
  "jsc": {
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": true
  }
}
